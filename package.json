{
  "name": "valorant-tips-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest --coverage && jest-coverage-badges",
    "test:watch-all": "jest --watchAll",
    "test:watch-all:coverage": "jest --watchAll --coverage",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "next build && start-server-and-test start http://localhost:3000 cypress",
    "e2e:headless": "next build && start-server-and-test start http://localhost:3000 cypress:headless",
    "type-check": "tsc",
    "lint": "next lint",
    "stylelint": "stylelint '**.css'",
    "check-all": "tsc && next lint && stylelint '**.css' && jest --coverage && jest-coverage-badges && yarn audit"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "identity-obj-proxy": "^3.0.0",
    "next": "^12.0.10",
    "query-string": "^7.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.4",
    "react-icons": "^4.3.1",
    "react-query": "^3.34.15",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.17",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^9.1.0",
    "autoprefixer": "^10.4.2",
    "cypress": "^9.4.1",
    "@react-mock/localstorage": "^0.1.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "eslint": "8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "jest": "^27.5.1",
    "jest-coverage-badges": "^1.1.2",
    "msw": "^0.36.8",
    "prettier": "^2.5.1",
    "start-server-and-test": "^1.14.0",
    "postcss": "^8.4.6",
    "stylelint": "^14.5.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "tailwindcss": "^3.0.22",
    "typescript": "4.5.5"
  },

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "length-zero-no-unit": true,
      "block-no-empty": true,
      "declaration-no-important": true,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    }
  }
}
